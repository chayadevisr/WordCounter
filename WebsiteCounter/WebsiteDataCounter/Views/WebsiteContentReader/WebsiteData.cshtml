@{
    ViewBag.Title = "Counter";
    Layout = "~/Views/WebsiteContentReader/Layout/MasterLayout.cshtml";
}

<div class="heading"><h2>Webiste Word counter</h2></div>
@model WebsiteContentReader.Models.ContentReader.WebsiteData

@using (Html.BeginForm("WebsiteContentCountResult", "WebsiteContentReader"))
{

    @Html.ValidationSummary(true)
    <div class="input-section">
        @Html.Label("WebSite URL", new { @class = "web-label" }) @Html.Raw(" : ")
        @Html.TextBoxFor(m => m.WebsiteURL, null, new { @placeholder = "Please enter website url", @class = "web-text" })
        @Html.ValidationMessageFor(m => m.WebsiteURL, string.Empty,
               new { @class="required-msgblock" })
    </div>
    <hr />
    <div class="borrow-btn-section">
        <input type="submit" id="btnSubmitWebsiteUrl" value="GetWebSite Result" class="submit" />
    </div>
}
